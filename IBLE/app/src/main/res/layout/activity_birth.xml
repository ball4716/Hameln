<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="정보를 입력해 주세요"
        android:textSize="26sp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="82dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/manbtn"
            android:layout_width="140.5dp"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/man_button_off"
            android:scaleType="centerCrop" />

        <Button
            android:layout_width="1px"
            android:layout_height="47dp"
            android:background="@drawable/gender_box_centerline" />

        <Button
            android:id="@+id/womanbtn"
            android:layout_width="140.5dp"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/woman_button_off"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/birthBtn"
        android:layout_width="281.5dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/birth_inputbox_basic"
        android:text="생년월일"
        android:gravity="left|center"
        android:padding="8dp"
        android:textSize="17sp"
        android:textColor="#919292"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:layout_gravity="center" />

    <Button
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:background="@drawable/birth_inputbox_basic"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/nextbtn"
        android:textColor="#919292"
        android:textSize="17sp"
        android:text="다음"/>

</LinearLayout>